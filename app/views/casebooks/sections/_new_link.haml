= simple_form_for :link, url: book_sections_path(@book), method: :post do |f|
  - if @section.present?
    = f.input :parent, as: :hidden, input_html: {value: @section.ordinal_string}
  = f.input :url, as: :string, placeholder: t('simple_form.labels.link.url'), label: false
  = f.submit t('simple_form.labels.link.save')
